<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./Partials/meta') %>
</head>
<body>
   <%- include('./Partials/header') %>  
     
   <section>
    <div class="separator">    
    </div>
    <div class="contain">
    <div id="carouselExampleCaptions" class="carousel carousel-dark slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
          <% var aux=0 %> 
          <% list[0].JSONBanner.forEach(banner=>{%> 
              <%if(aux==0){%>        
                  <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="<%=aux%>" class="active" aria-current="true" aria-label="Slide <%=aux%>"></button>                 
              <%}else{%> 
                  <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="<%=aux%>" aria-label="Slide <%=aux%>"></button>
              <%}%>
              <%aux++%>   
            <%}) %> 
        </div>
        <div class="carousel-inner">
         <%var flag=true %> 
          <% list[0].JSONBanner.forEach(banner=>{ %>       
             <%if(flag == true){flag=false %>          
              <div class="carousel-item active">   
              <%}else{  %>            
                <div class="carousel-item "> 
                <% } %> 
              <img src="<%= banner.source%>" class="d-block w-100" alt="<%= banner.alt%>">     
            </div>                
          <% }) %> 
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
       
    </div>
   </div>
    <div class="separator">    
    </div>
    <main>
      <section class="sec-products">
         <div class="container ">
             <div class="row ">
               <div class="d-flex flex-row">
                 <h2 class=" products font pt-4">Productos Destacados </h2>
                 <div class="logoEstrella"><img src="img/star.jpg"  alt="estrella"></div>      
               </div>       
                  <% list[1].JSONProducts.forEach(product=>{ %>
                    <%if( product.porcentajeOferta==0){%>  
                      <div class="col-3 mb-3">              
                          <div class="card cardW" >           
                            <img src="img/imgProductos/<%= product.source%>" class="card-img-top tamanoImg mx-auto" alt="<%= product.alt%>">                                     
                            <div class="card-body">
                            <h5 class="card-title"><%=product.titulo%></h5>
                            <p class="card-text"><%= product.descripcion%></p>
                            <a href="#" class="btn btn-primary">Agregar a Pedido</a>
                          </div>
                    </div>            
                    </div>  
                    <% } %>   
                  <% }) %>
                              <!--Foreach end!!!  -->
                 </div>
         </div>
     </section>
   

     <section class="sec-products">
      <div class="container ">
        <div class="row">
            <div class="separator">    
            </div>
        </div>
        <div class="row ">
          <h2 class="sec-products font">Nuestras Ofertas</h2>                      
          <div id="carouselCardOferta" class="carousel carousel-dark slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
              <button type="button" data-bs-target="#carouselCardOferta" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
              <button type="button" data-bs-target="#carouselCardOferta" data-bs-slide-to="1" aria-label="Slide 2"></button>            
            </div>
        <div class="carousel-inner d-flex">
               
            <% list[2].JSONOfertaMatrix.forEach((list,index)=>{ %>
              <%if(index==0){%>  
                <div class="carousel-item  active">
              <%}else{%> 
                <div class="carousel-item ">
              <%}%> 
                <div class="d-flex justify-content-evenly m-0 p-0">    
              <% list.forEach((product,index)=>{ %>
                
                                                                                       
                      <div class="card cardW"  >
                        <img src="img/imgProductos/<%= product.source%>" class="card-img-top tamanoImg mx-auto" alt="<%=product.alt%>" >
                        <div class="card-body">
                          <h6 class="card-title"><%= product.titulo%> </h6>
                          <p class="card-text">
                            <div class="tachado"><span class="currencySymbol">$</span><%= product.precioVenta%> </div>
                            <div><span class="currencySymbol">$</span><%=  product.precioOferta   %> </div>
                          </p>
                          <a href="#" class="btn btn-primary">Agregar a Pedido</a>
                        </div>
                      </div>            
                                                                            
                    <%})%>
                  </div>
                </div>
            <%})%>
         
        </div>
 
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselCardOferta" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselCardOferta" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        </div>
      </div>
  </section>












   </main>
  </section>
 

 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
 integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
 crossorigin="anonymous">
</script>
<%- include('./Partials/footer') %>  
</body>
</html>